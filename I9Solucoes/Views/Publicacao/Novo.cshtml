@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="row">
        <div class="col-lg-1">
            <h2>Nova Publicação</h2>
        </div>
        <div class="col-lg-11">
            <blockquote>
                Preencha os dados para criar a publicação para o site.
            </blockquote>
        </div>
        <form id="formPublicacao" name="formPublicacao">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="titulo">Título:</label>
                        <input type="text" id="titulo" name="titulo" required>
                    </div>
                    <div class="form-group">
                        <label for="texto">Texto:</label>
                        <input type="text" id="texto" name="texto" required>
                    </div>
                </div>
            </div>
            <input class="btn" type="button" id="btnSalvar" onClick="salvar()" value="Salvar" />
        </form>
    </div>
</section>
<hr>
<div id="alerta" class="alert alert-success" aria-live="polite">
</div>
<script src="~/Scripts/publicacao/Publicacao.js"></script>