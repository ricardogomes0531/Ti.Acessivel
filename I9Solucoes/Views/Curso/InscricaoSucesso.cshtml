@model I9Solucoes.Models.Erro
@{
    Layout = "~/Views/Shared/_LayoutEspecifico.cshtml";
}
<section>
    <div class="row">
        <div class="col-lg-3">
            <h1>Inscrição</h1>
        </div>
        <div class="col-lg-8">
            <p class="text-lead">
                <b>@Model.Mensagem</b>
                <br />
                @if (!Model.ExisteErro)
                {
                <a href="/Curso/?idCurso=@ViewBag.idCurso">Ir para o curso</a>
                }
            </p>
                    </div>
    </div>
</section>
<hr>
