@model I9Solucoes.ViewModels.RespostaViewModel

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TI Acessível</title>
</head>
<body>

<section>
    <div class="row">
        <div class="col-lg-3">
            <h1>Realização de Atividade</h1>
        </div>
        <div class="col-lg-8">
            <h2>@ViewBag.atividade.Titulo</h2>
            <pre>@ViewBag.atividade.Descricao</pre>
            @if (ViewBag.usuarioAtividade.Id != 0)
            {
                <b>Comentário do professor: @ViewBag.usuarioAtividade.ComentarioProfessor</b>
                <br />
                <b>Nota: @ViewBag.usuarioAtividade.Nota</b>
                <br />
                if (ViewBag.usuarioAtividade.SnConcluida == "S")
                {
                    <b>Status da atividade: Concluída</b>
                }
                else if (ViewBag.usuarioAtividade.SnConcluida == "N")
                {
                    <b>Status da atividade: Ainda não concluída</b>
                }
            }


            @if (ViewBag.usuarioAtividade.Id == 0 || ViewBag.usuarioAtividade.SnConcluida != "S")
            {
                <form id="formAtividade" name="formAtividade" action="/curso/GravarAtividade" method="post">
                    <input type="hidden" name="idCurso" value="@ViewBag.atividade.IdCurso" />
                    <input type="hidden" name="idModuloBloqueado" value="@ViewBag.atividade.IdModuloBloqueado" />
                    <input type="hidden" name="idAluno" value="@ViewBag.idAluno" />
                    <input type="hidden" name="idAtividade" value="@ViewBag.atividade.IdAtividade" />
                    <div class="form-group">
                        <label for="resposta">Insira aqui a sua resposta:</label>
                        @Html.TextAreaFor(m => m.Resposta, new { id = "resposta", rows = "200" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Enviar">
                    </div>
                </form>

            }
        </div>
    </div>
</section>
</body>
</html>